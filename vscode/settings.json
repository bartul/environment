// Place your settings in this file to overwrite the default settings

{
    // Controls the font family.
    "editor.fontFamily": "Cascadia Code, Fira Code, Menlo, Consolas",

    // Controls the font size.
    "editor.fontSize": 14,

    // Controls visibility of line numbers
    "editor.lineNumbers": "off",

    // Enables font ligatures
    "editor.fontLigatures": true,
 
    // Controls visibility of the glyph margin
	"editor.glyphMargin": true,
    
    // Controls if the editor shows reference information for the modes that support it
    "editor.codeLens": false,

     // The number of spaces a tab is equal to. This setting is overriden based on the file contents when `editor.detectIndentation` is on.
     "editor.tabSize": 4,

    // Insert spaces when pressing Tab. This setting is overriden based on the file contents when `editor.detectIndentation` is on.
    "editor.insertSpaces": true,

    // When opening a file, `editor.tabSize` and `editor.insertSpaces` will be detected based on the file contents.
    "editor.detectIndentation": true,

    "editor.renderIndentGuides": false,

    "editor.minimap.enabled": false,

    // Controls auto save of dirty files. Accepted values:  'off', 'afterDelay', 'onFocusChange' (editor loses focus), 'onWindowChange' (window loses focus). If set to 'afterDelay', you can configure the delay in 'files.autoSaveDelay'.
    "files.autoSave": "afterDelay",

    // If set to true, the new version message won't be shown anymore.
    "vsicons.dontShowNewVersionMessage": true,

    // Enables macOS Sierra window tabs. Note that changes require a full restart to apply and that native tabs will disable a custom title bar style if configured.
    "window.nativeTabs": true,

    // Controls font aliasing method in the workbench.
    // - default: Sub-pixel font smoothing. On most non-retina displays this will give the sharpest text
    // - antialiased: Smooth the font on the level of the pixel, as opposed to the subpixel. Can make the font appear lighter overall
    // - none: Disables font smoothing. Text will show with jagged sharp edges
    // "workbench.fontAliasing": "antialiased",

    "workbench.statusBar.visible": false,
    "workbench.activityBar.visible": false,
    "workbench.colorTheme": "Solarized Dark",
    "workbench.iconTheme": "vscode-icons",
    "workbench.sideBar.location": "left",
    "workbench.startupEditor": "none",
    
    // Customizes which terminal application to run on OS X.
    "terminal.external.osxExec": "iTerm.app",

    "breadcrumbs.enabled": false,
    
    // Controls the font family of the terminal, this defaults to editor.fontFamily's value.
    "terminal.integrated.fontFamily": "Fira Code, Menlo for Powerline, Consolas",
    "terminal.integrated.fontSize": 15,
    "editor.formatOnType": true,

    "FSharp.fsacRuntime": "netcore",
    "editor.renderWhitespace": "selection",
    "workbench.activityBar.location": "hidden",
    "editor.guides.indentation": false,
    "terminal.integrated.shellIntegration.enabled": false
}
